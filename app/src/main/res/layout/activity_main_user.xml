                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/product_sans_bold"
                        android:paddingBottom="4dp"
                        android:text="وضعیت آب و هوا"
