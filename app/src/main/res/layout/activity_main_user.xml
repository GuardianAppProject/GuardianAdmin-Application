                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:background="@drawable/factor_background"
                    android:orientation="vertical"
                    android:padding="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
